{
  "name": "southernins/build-tool",
  "description": "Tool to create build files for deploying to AWS Elastic Beanstalk",
  "license": "MIT",
  "keywords": ["build"],
  "authors": [
    {
      "name": "Nathan Crews",
      "email": "ncrews@southerninsurance.net"
    }
  ],
  "require": {
    "illuminate/support": "~5.1",
    "illuminate/console": "~5.1"
  },
  "require-dev": {
    "phpunit/phpunit": "~5.7"
  },
  "autoload": {
    "psr-4": {
      "SouthernIns\\BuildTool\\": "src/"
    }
  },

  "extra": {
    "laravel": {
      "providers": [
        "SouthernIns\\BuildTool\\BuildServiceProvider"
      ]
    }
  },

  "scripts": {

    "pre-install-cmd": [
      "SouthernIns\\BuildTool\\ComposerScripts::preInstallCmd"
    ],
    "post-install-cmd": [
      "SouthernIns\\BuildTool\\ComposerScripts::postInstallCmd"
    ],
    "pre-update-cmd": [
      "SouthernIns\\BuildTool\\ComposerScripts::preUpdateCmd"
    ],
    "post-update-cmd": [
      "SouthernIns\\BuildTool\\ComposerScripts::postUpdateCmd"
    ],
    "post-status-cmd": [
      "SouthernIns\\BuildTool\\ComposerScripts::postStatusCmd"
    ],
    "pre-archive-cmd": [
      "SouthernIns\\BuildTool\\ComposerScripts::preArchiveCmd"
    ],
    "post-archive-cmd": [
      "SouthernIns\\BuildTool\\ComposerScripts::postArchiveCmd"
    ],
    "pre-autoload-dump": [
      "SouthernIns\\BuildTool\\ComposerScripts::preAutoloadDump"
    ],
    "post-autoload-dump": [
      "SouthernIns\\BuildTool\\ComposerScripts::postAutoloadDump"
    ],
    "post-root-package": [
      "SouthernIns\\BuildTool\\ComposerScripts::postRootPackage"
    ],
    "post-create-project": [
      "SouthernIns\\BuildTool\\ComposerScripts::postCreateProject"
    ],
    "pre-dependencies-solving": [
      "SouthernIns\\BuildTool\\ComposerScripts::preDependenciesSolving"
    ],
    "post-dependencies-solving": [
      "SouthernIns\\BuildTool\\ComposerScripts::postDependenciesSolving"
    ],
    "pre-package-install": [
      "SouthernIns\\BuildTool\\ComposerScripts::prePackageInstall"
    ],
    "post-package-install": [
      "SouthernIns\\BuildTool\\ComposerScripts::postPackageInstall"
    ],
    "pre-package-update": [
      "SouthernIns\\BuildTool\\ComposerScripts::prePackageUpdate"
    ],
    "post-package-update": [
      "SouthernIns\\BuildTool\\ComposerScripts::postPackageUpdate"
    ],
    "pre-package-uninstall": [
      "SouthernIns\\BuildTool\\ComposerScripts::prePackageUninstall"
    ],
    "post-package-uninstall": [
      "SouthernIns\\BuildTool\\ComposerScripts::postPackageUninstall"
    ]
  }

}